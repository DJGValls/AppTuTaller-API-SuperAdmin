{
    "compilerOptions": {
        "target": "ES6",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types", "./src/types/express"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
